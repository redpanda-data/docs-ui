    script.onload = function() {
      // Wait for Kapa to initialize, then open if pending
      if (pendingOpen) {
        var checkKapa = setInterval(function() {
          if (window.Kapa) {
            clearInterval(checkKapa);
            window.Kapa.open();
            pendingOpen = false;
          }
        }, 50);
        // Stop checking after 5 seconds
        setTimeout(function() { clearInterval(checkKapa); }, 5000);
      }
    };
    document.head.appendChild(script);
  }
  // Load Kapa on Cmd/Ctrl+K or when clicking AI-related elements
  document.addEventListener('keydown', function(e) {
    if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
      loadKapa(true);
    }
  });
  // Load and open on interaction with AI buttons
  document.addEventListener('click', function(e) {
    if (e.target.closest('.custom-class-kapa, .ask-ai-button, [data-kapa-trigger]')) {
      loadKapa(true);
    }
  });
  // Fallback: Load (but don't open) after 5 seconds of idle time
  if ('requestIdleCallback' in window) {
    requestIdleCallback(function() { setTimeout(function() { loadKapa(false); }, 5000); });
  } else {
    setTimeout(function() { loadKapa(false); }, 5000);
  }
})();
</script>
