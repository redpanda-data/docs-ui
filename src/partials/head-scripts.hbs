<script>
(function() {
  var kapaLoaded = false;
  var pendingOpen = false;
  function loadKapa(shouldOpen) {
    if (shouldOpen) pendingOpen = true;
    if (kapaLoaded) {
      // Already loaded, open if Kapa is ready
      if (pendingOpen && window.Kapa) {
        window.Kapa.open();
        pendingOpen = false;
      }
      return;
    }
    kapaLoaded = true;
    var script = document.createElement('script');
    script.src = 'https://widget.kapa.ai/kapa-widget.bundle.js';
    script.setAttribute('data-website-id', 'fe00d579-9e9a-4f83-8f9f-0ca7672262a6');
