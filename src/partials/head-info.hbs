    {{#with page.canonicalUrl}}
    <link rel="canonical" href="{{{this}}}">
    {{/with}}
    {{#unless (eq page.attributes.pagination undefined)}}
    {{#with page.previous}}
    <link rel="prev" href="{{{relativize ./url}}}">
    {{/with}}
    {{#with page.next}}
    <link rel="next" href="{{{relativize ./url}}}">
    {{/with}}
    {{/unless}}

    {{!-- Basic Meta Tags --}}
    {{#with page.description}}
    <meta name="description" content="{{{detag this}}}">
    {{else}}
    {{!-- Try to extract description from page content if available --}}
    {{#if page.contents}}
    <meta name="description" content="{{{extract-description page.contents 160}}}">
    {{else}}
    {{!-- Fallback descriptions --}}
    {{#if (eq page.component.name 'ROOT')}}
    <meta name="description" content="Comprehensive documentation for Redpanda, the streaming data platform that is Kafka API compatible, 10x faster, and easier to use.">
    {{else}}
    <meta name="description" content="Learn about {{page.component.title}} in Redpanda - the streaming data platform that is Kafka API compatible, 10x faster, and easier to use.">
    {{/if}}
    {{/if}}
    {{/with}}

    {{!-- Include Social Media Meta Tags --}}
    {{> social-meta}}

    {{#with page.keywords}}
    <meta name="keywords" content="{{{this}}}">
    {{/with}}
    {{#with (or antoraVersion site.antoraVersion)}}
    <meta name="generator" content="Antora {{{this}}}">
    {{/with}}
