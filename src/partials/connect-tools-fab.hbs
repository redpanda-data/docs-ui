{{!-- Quick access to Bloblang Playground and Claude AI Skills --}}
{{!-- Visibility controlled by JS based on page component --}}
<div class="connect-tools-fab" id="connect-tools-fab" aria-label="Connect Tools">
  {{!-- Main FAB button --}}
  <button
    class="connect-tools-fab-trigger"
    id="connect-tools-fab-trigger"
    aria-expanded="false"
    aria-controls="connect-tools-menu"
    aria-label="Open Connect tools menu"
    title="Connect Tools"
  >
    <svg class="fab-icon fab-icon-tools" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"></path>
    </svg>
    <svg class="fab-icon fab-icon-close" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>

  {{!-- First-time tooltip --}}
  <div class="connect-tools-fab-tooltip" id="connect-tools-fab-tooltip" role="tooltip">
    <span class="tooltip-text">Quick access to Connect tools</span>
    <button class="tooltip-dismiss" aria-label="Dismiss tooltip">&times;</button>
  </div>

  {{!-- Expanded menu --}}
  <div class="connect-tools-menu" id="connect-tools-menu" role="menu" aria-hidden="true">
    <a
      href="{{{siteRootPath}}}/redpanda-connect/guides/bloblang/playground/"
      class="connect-tools-menu-item"
      role="menuitem"
    >
      <span class="menu-item-icon">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="4 17 10 11 4 5"></polyline>
          <line x1="12" y1="19" x2="20" y2="19"></line>
        </svg>
      </span>
      <span class="menu-item-text">
        <span class="menu-item-title">Bloblang Playground</span>
        <span class="menu-item-desc">Interactive data mapping</span>
      </span>
    </a>
    <a
      href="https://github.com/redpanda-data/connect/blob/main/.claude-plugin/README.md"
      class="connect-tools-menu-item"
      role="menuitem"
      target="_blank"
      rel="noopener"
    >
      <span class="menu-item-icon">
        <svg viewBox="0 0 24 24" width="20" height="20" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
          <path d="M2 17l10 5 10-5"></path>
          <path d="M2 12l10 5 10-5"></path>
        </svg>
      </span>
      <span class="menu-item-text">
        <span class="menu-item-title">Claude AI Skills</span>
        <span class="menu-item-desc">AI-assisted pipelines</span>
      </span>
    </a>
  </div>
</div>
