<header class="header">
  <nav class="navbar" {{#with page.component.latest.asciidoc.attributes.page-header-data}}style="background-color: {{this.color}}"{{/with}}>
    {{> announcement-bar}}
    <div class="navbar-brand" id="brand">
      <a class="navbar-item" href="{{{or site.url siteRootPath}}}" aria-label="Go to home page"><img src="{{{uiRootPath}}}/img/redpanda-docs-logo-white.svg" width="250px" height= "30px" alt="Redpanda logo"/></a>
      <button class="navbar-burger" data-target="topbar-nav" aria-label="Header navigation menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
    <div id="topbar-nav" class="navbar-menu" {{#with page.component.latest.asciidoc.attributes.page-header-data}}style="background-color: {{this.color}}"{{/with}}>
      {{#each (sort-components site.components)}}
      <a target="_blank" class="navbar-item {{#if (eq this.title @root.page.component.title)}}is-current{{/if}}" href="{{{this.url}}}">{{this.title}}</a>
      {{/each}}
      <div class="navbar-end">
        {{> ai-button}}
        {{#if (and (ne page.layout 'search') (ne page.layout 'labs-search'))}}
        <div> or </div>
        <div class="autocomplete" id="autocomplete"></div>
        {{/if}}
        <div class="theme-switcher">
          <button id="switch-theme" type="button" title="Switch between dark and light mode" aria-label="Switch between dark and light mode" aria-live="polite"><img class="theme-image" src="{{{uiRootPath}}}/img/octicons-24.svg#view-sun" alt=""></img>
          </button>
        </div>
      </div>
    </div>
  </nav>
</header>
