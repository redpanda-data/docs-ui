<header class="header">
  <nav class="navbar" {{#if page.component.latest.asciidoc.attributes.page-header-data}}{{#with page.component.latest.asciidoc.attributes.page-header-data}}style="background-color: {{this.color}}"{{/with}}{{else}}style="background-color: #101828"{{/if}}
>
    <div class="navbar-brand" id="brand">
      <a class="navbar-item" href="{{{or site.url siteRootPath}}}" aria-label="Go to home page"><img src="{{{uiRootPath}}}/img/redpanda-docs-logo-white.svg" width="250px" height= "30px" alt="Redpanda logo"/></a>
      <button class="navbar-burger" data-target="topbar-nav" aria-label="Header navigation menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
    <div id="topbar-nav" class="navbar-menu" {{#if page.component.latest.asciidoc.attributes.page-header-data}}{{#with page.component.latest.asciidoc.attributes.page-header-data}}style="background-color: {{this.color}}"{{/with}}{{else}}style="background-color: #101828"{{/if}}>
      {{#each (sort-components site.components)}}
      <a class="navbar-item {{#if (eq this.title @root.page.component.title)}}is-current{{/if}}" href="{{{this.url}}}">{{this.title}}</a>
      {{/each}}
      <div class="navbar-end">
        {{#if (ne page.attributes.role 'home')}}
          {{> ai-button}}
          {{#if (and (and (ne page.layout 'search') (ne page.layout 'labs-search')) (ne page.layout 'swagger'))}}
          <div> or </div>
          <div class="autocomplete" id="autocomplete"></div>
          {{/if}}
        {{/if}}
        <div class="theme-switcher">
          <button id="switch-theme" type="button" title="Switch between dark and light mode" aria-label="Switch between dark and light mode" aria-live="polite"><img class="theme-image" src="{{{uiRootPath}}}/img/octicons-24.svg#view-sun" alt=""></img>
          </button>
        </div>
      </div>
    </div>
  </nav>
  {{> announcement-bar}}
</header>
