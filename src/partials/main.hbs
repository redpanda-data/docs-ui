<main class="article">
{{#if (ne page.attributes.role 'home')}}
  {{> toolbar}}
{{/if}}
  <div class="content">
    {{#if (eq page.layout '404')}}
    {{> article-404}}
    {{else if (eq page.attributes.role 'home')}}
    {{> article}}
    {{else}}
    {{> toc}}
    {{> article}}
    {{/if}}
  </div>
  {{> footer}}
</main>
